{
  "name": "FreeBuzz",
  "version": "0.0.1",
  "main": "electron/main.js",
  "author": "Kerschbaumer Stefan",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "ng:serve": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:serve-tsc": "tsc -p tsconfig.electron.serve.json",
    "fix:sandbox": "sudo chown root:root ./node_modules/electron/dist/chrome-sandbox && sudo chmod 4755 ./node_modules/electron/dist/chrome-sandbox",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && electron . --serve --ozone-platform-hint=auto -enable-features=UseOzonePlatform,WaylandWindowDecorations --ozone-platform-hint=auto --enable-transparent-visuals",
    "build:all": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build:all -- -c dev",
    "build:prod": "npm run build:all -- -c production",
    "web:build": "npm run build:all -- -c web-production",
    "electron": "electron",
    "electron:local": "npm run build:prod && electron .",
    "make-icons": "electron-icon-maker --input=icon.png --output=./",
    "electron:build": "npm run build:prod && electron-builder build --publish=never"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@ngrx/signals": "^18.1.1",
    "connect": "^3.7.0",
    "ftp-srv": "^4.6.3",
    "mime": "2.5.2",
    "ngx-toastr": "^19.0.0",
    "node-buzzers": "^2.2.0",
    "node-hid": "^3.1.2",
    "rxjs": "~7.8.0",
    "sanitize-filename": "^1.6.3",
    "serve-static": "^1.16.2",
    "tslib": "^2.3.0",
    "youtube-search-api": "^1.2.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.2",
    "@angular/cli": "^19.0.2",
    "@angular/compiler-cli": "^19.0.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-debug": "^4.1.0",
    "electron-icon-maker": "^0.0.5",
    "electron-reloader": "^1.2.3",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "~5.6.2",
    "wait-on": "^8.0.1"
  },
  "overrides": {
    "@ngrx/signals": {
      "@angular/common": "$@angular/common",
      "@angular/core": "$@angular/core"
    }
  }
}
